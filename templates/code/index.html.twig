{% extends 'base.html.twig' %}

{% block title %}Code index{% endblock %}

{% block body %}
    <h1>Code index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>Author</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for code in codes %}
            <tr>
                <td>{{ code.id }}</td>
                <td>{{ code.Title }}</td>
                <td>{{ code.content }}</td>
                <td>{{ code.author }}</td>
                <td>{{ code.createdAt ? code.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('code_show', {'id': code.id}) }}">show</a>
                    <a href="{{ path('code_edit', {'id': code.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('code_new') }}">Create new</a>
{% endblock %}
