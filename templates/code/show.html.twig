{% extends 'base.html.twig' %}

{% block title %}Code
{% endblock %}

{% block body %}

	<h1>{{ code.Title }}</h1>

	<div class="container">
		<div class="card text-center">
			<div class="card-header">
				{{ code.author }}
			</div>
			<div class="card-body">
				<h5 class="card-title">{{ code.Title }}</h5>
				<p class="card-text">{{ code.content|raw }}</p>
				{# <a href="{{ path('code_show', {'id': code.id}) }}" class="btn btn-primary">show</a> #}
			</div>
			<div class="card-footer text-muted">
				{{ code.createdAt ? code.createdAt|date('Y-m-d H:i:s') : '' }}
			</div>
		</div>
	</div>

	<a href="{{ path('code_index') }}">back to list</a>

	<a href="{{ path('code_edit', {'id': code.id}) }}">edit</a>
	{% if is_granted('ROLE_ADMIN')%}

		{{ include('code/_delete_form.html.twig') }}
	{% endif %}

{% endblock %}
