{% extends 'base.html.twig' %}

{% block title %}Profile
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.2/css/all.css" integrity="sha384-vSIIfh2YWi9wW0r9iZe7RJPrKwp6bG+s9QZMoITbCckVJqGCCRhc+ccxNcdpHuYu" crossorigin="anonymous"/>
	<link rel="stylesheet" href="{{ asset('assets/css/form.css')}}">
	<link rel="stylesheet" href="{{ asset('assets/css/style.css')}}">

{% endblock %}
{% block body %}
	<div class="container">
		<h1>
			{{app.user.LastName}}'s Profile</h1>
		<img
		src="{{asset('assets/images/users/')}}{{app.user.avatar}}?version={{ date().timestamp }}" class="img-radius mt-3 mb-3" alt="User-Profile-Image">

		{# {{ include('user/_form.html.twig', {'button_label': 'Update'}) }} #}

		{{ form_start(form,{'attr':{'id':'dropZone','name':'register'}}
		) }}
		{{ form_row(form.avatar) }}
		{{ form_row(form.LastName,{'attr':{'placeholder':'Enter LastName','class':'form-control'}})}}
		{{ form_row(form.FirstName,{'attr':{'placeholder':'Enter FirstName','class':'form-control'}})}}
		{{ form_row(form.email,{'attr':{'placeholder':'Enter email','class':'form-control'}})}}
		<div></div>
		<button type="submit" class="btn btn-success mt-3 mb-3">Update</button>

		{{ form_end(form) }}</div>
</div>{% endblock %}
