{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}
{% block javascripts %}
	<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js" integrity="sha384-+YQ4JLhjyBLPDQt//I+STsc9iw4uQqACwlvpslubQzn4u2UU2UFM80nGisd026JF" crossorigin="anonymous"></script>
	<script src="{{asset('assets/js/togglePassword.js')}}"></script>
{% endblock %}
{% block body %}
	{% if passError is defined %}
		<div class="alert alert-danger" role="alert">{{ passError }}</div>
	{% endif %}
	{% for flashError in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flashError }}</div>
	{% endfor %}

	<h1>Register</h1>
	<div class="formulaire">{{ form_start(registrationForm) }}

		{{ form_start(registrationForm) }}
		{{ form_row(registrationForm.email,{'attr':{'placeholder':'Enter email','class':'form-control'}})}}
		{{form_row(registrationForm.plainPassword, {'id':'password-field','attr':{'placeholder':'Your Password','class':'form-control'}})}}
		<span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
		{{form_row(registrationForm.confirmPassword, {'id':'confirmPassword-field','attr':{'placeholder':'Confirm Your Password','class':'form-control'}})}}
		<span toggle="#confirmPassword-field" class="fa fa-fw fa-eye field-icon toggle-confirmPassword"></span>
		{{ form_row(registrationForm.agreeTerms) }}
		<button type="submit" class="btn">Register</button>
		{{ form_end(registrationForm) }}
	</div>
</div>{% endblock %}
